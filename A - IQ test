#include <cstdio>
#include <iostream>

using namespace std;

int main()
{
    int n;
    scanf("%d",&n);
    int a[n];
    int even=0,odd=0;
    int eindex;
    int oindex;
    for(int i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
        if(a[i]%2==0)
        {
            eindex=i;
            even++;
        }
        else
        {
            oindex=i;
            odd++;
        }
    }
    if(odd==1)
    printf("%d",oindex+1);
    else
    printf("%d",eindex+1);
    
    
    
}
